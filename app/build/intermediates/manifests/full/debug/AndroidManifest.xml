            android:name="com.av7bible.av7bibleappv3.MainActivity"
            android:configChanges="orientation"
            android:label="AV7 Bible"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.av7bible.av7bibleappv3.TableOfContents"
            android:configChanges="orientation"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.av7bible.av7bibleappv3.BibleContent"
            android:configChanges="orientation"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.av7bible.av7bibleappv3.GoToAmazon"
            android:finishOnTaskLaunch="true" />
        <activity
            android:name="com.av7bible.av7bibleappv3.HelpPage"
            android:finishOnTaskLaunch="true" />
