<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.av7bible.av7bibleappv3">


    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label=""
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.av7bible.av7bibleappv3.MainActivity"
            android:label="AV7 Bible"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.av7bible.av7bibleappv3.TableOfContents"
            android:finishOnTaskLaunch="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.av7bible.av7bibleappv3.BibleContent"
            android:finishOnTaskLaunch="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
                        />
        <activity android:name="com.av7bible.av7bibleappv3.GoToAmazon"
            android:finishOnTaskLaunch="true"/>
        <activity android:name="com.av7bible.av7bibleappv3.HelpPage" android:finishOnTaskLaunch="true"/>
        <activity android:name="com.av7bible.av7bibleappv3.SharePage" android:finishOnTaskLaunch="true"/>



    </application>

</manifest>
